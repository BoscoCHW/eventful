<div class="container">
    <h1 class="user-name">
        <img src=<%=user.avatar %>>
        <%= user.name %>
    </h1>
    

    <!-- Event Calendar -->

    <div class="calendar-wrapper">
        <div class="calendar-picture">
            <div class="date-location">
                <h2><%= calendarData.today.month %> <%= calendarData.today.date %> </h2>
                <h4><%= calendarData.today.weekDay %></h4>
                <h4 id="location"></h4>
            </div>
            
            <div class="weather">
                <h2 style="display: inline-block;" id="temp"></h2 > <h2 style="display: inline-block;">C</h2>
                <h4 id="description"></h4>
            </div>
            
        </div>

        <div class="calendar">
            <% for (weekDay of calendarData.weekDays) { %>
                <div class="calendar-day"><%= weekDay %></div>
                <% } %>

            <% let boxCount = 0; for (let i=0; i<calendarData.firstOfMonthDay; i++) { %>
                <div class="calendar-number"></div>
                <% boxCount++ } %>
                
            <% for (let i=1; i<=calendarData.lastOfMonthDate; i++) { 
                let dateString = calendarData.today.year + String(calendarData.today.monthNum).padStart(2, '0') + String(i).padStart(2, '0') %>

                <% if (i === Number(calendarData.today.date)) { %>
                <div class="calendar-number current-day">
                    <a href=<%="/reminders/" + dateString %>> <%= i %> </a>
                <% } else { %>
                    <div class="calendar-number">
                        <a href=<%="/reminders/" + dateString %>> <%= i %> </a>
                <% } %>

                    <div class="events">

                        <%  let remindersOfTheDay = []
                            reminders.forEach(function (reminderItem) {
                                let date = new Date(reminderItem.date) 
                                let dateStrTokens = date.toLocaleString('en-GB', {dateStyle: "full"}).split(' ')
                                if (dateStrTokens[2] + dateStrTokens[1] + dateStrTokens[3] === calendarData.today.month + i + calendarData.today.year) {
                                    let reminderTitle = reminderItem.title
                                    if (reminderTitle.length > 15) {
                                        reminderTitle = reminderTitle.slice(0,12) + '...'
                                    }
                                    reminderItem.title = reminderTitle
                                    console.log(reminderTitle)
                                    remindersOfTheDay.push(reminderItem)}}) %>
                        <% if (remindersOfTheDay.length > 2) { %>
                            <div><a href="/reminders/<%= dateString %>"><%= remindersOfTheDay.length %> events</a></div>
                            <% } else { 
                                for (reminder of remindersOfTheDay) { %>
                                    <div><a href="/reminder/<%= reminder.id%>"><%= reminder.title %></a></div>
                            <% }} %>

                    </div>

                </div>


            <% boxCount++ } %>
            <% while (boxCount%7 !== 0) { %>
                <div class="calendar-number"></div>
                <% boxCount++ } %>
        </div>
        </div>


    <h1 class="events-header">Events</h1>
    <form action="/reminders/search" method="GET">
        <input type="text" name="search" id="search" placeholder="Search for events" class="search" />
        <button class="search-btn" type="submit">Search</button>
    </form>


    <ul class="list-group">
        <% reminders.forEach(function (reminderItem) { %>
            <li class="list-group-item">
                <img src=<%=reminderItem.image_url %> alt=
                <%= reminderItem.title %> style="width:50px; height:50px;">

                    <strong><%= reminderItem.title %>: </strong>
                    <%= reminderItem.description %>
                        || Date:
                        <%= reminderItem.date %>
                            || Tags: (<%= reminderItem.tags %>) || Importance:
                                <% if (reminderItem.completed == true) { %>
                                    <span class="badge badge-success">Low</span>
                                    <% } else if (reminderItem.completed == false) { %>
                                        <span class="badge badge-danger">Important</span>
                                        <% } %>
                                            <a class="pull-right" href=<%="/reminder/" + reminderItem.id %>>View</a>
            </li>
            <% }) %>
    </ul>

    
    
    <!-- Friends' reminders -->

    <% if(friendIDs.length > 0){%>
        <br><br>
        <h2 class="page-header">My Friends' Events</h2>
        <% }%>


            <ul class="list-group">

                <% database.forEach((friend)=> { %>
                    <% if (friendIDs.includes(String(friend.id))) {%>
                        <h3 class="page-header">
                            <%=friend.name %>
                        </h3>
                        <% friend.reminders.forEach(reminderItem => { %>
                            <li class="list-group-item">
                                <img src=<%=reminderItem.image_url %> alt=
                                <%= reminderItem.title %> style="width:50px; height:50px;">

                                    <strong><%= reminderItem.title %>: </strong>
                                    <%= reminderItem.description %>
                                        || Date:
                                        <%= reminderItem.date %>
                                            || Tags: (<%= reminderItem.tags %>) || Importance:
                                                <% if (reminderItem.completed == true) { %>
                                                    <span class="badge badge-success">Low</span>
                                                    <% } else if (reminderItem.completed == false) { %>
                                                        <span class="badge badge-danger">Important</span>
                                                        <% } %>
                            </li>


                            <% });%>
                                <% }; %>
                                    <% }) %>
            </ul>


</div>