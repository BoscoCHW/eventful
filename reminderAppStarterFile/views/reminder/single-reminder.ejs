<div class="container">
    <h1 class="page-header">Reminders</h1>

    <ul class="list-group">
        <li class="list-group-item">
            <h3><strong><%= reminderItem.title %>: </strong></h3>
            <img src=<%=reminderItem.image_url %> alt=
            <%= reminderItem.title %> style="width:100px; height:100px;">

                <h4>
                    <p>Reminder description:</p>
                    <%= reminderItem.description %>
                </h4>
                <h4>
                    <p>Reminder tags:</p>
                    <span class="label label-success"><%= reminderItem.tags %></span>
                </h4>
                <h4>
                    <p>Reminder date:</p>
                    <%= reminderItem.date %>
                </h4>
                <h4>
                    <p>Reminder completed:</p>
                    <% if (reminderItem.completed == true) { %>
                        <span class="label label-success">True</span>
                        <% } else if (reminderItem.completed == false) { %>
                            <span class="label label-danger">False</span>
                            <% } %>
                </h4>
                <h4>Reminder subtasks:
                    <ul>
                        <% for(let i = 0; i < reminderItem.subtasks.length; i++) {%>
                            <% if (!(reminderItem.subtasks[i] === "")) {%>
                                <li>
                                    <%= reminderItem.subtasks[i] %>
                                </li>
                                <%   }%>
                                    <% } %>
                    </ul>
                </h4>


                <a class="btn btn-warning" href=<%="/reminder/" + reminderItem.id + "/edit" %>>Edit</a>

                <form class="deleteForm " method="POST" action=<%="/reminder/delete/" + reminderItem.id %>>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

        </li>
    </ul>

</div>