<div class="container">
  <h1 class="page-header">Create Event</h1>
  <form action="/event" method="POST">
    
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title" maxlength="100">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description" maxlength="10000"></textarea>
    </div>
 
    <div class="form-group">
      <label for="tags">Tags</label>
      <textarea class="form-control" id="tagsInput" rows="3" placeholder="Enter tags, separated by a comma" name="tags"></textarea>
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="datetime-local" id="dateInput" placeholder="MM/DD/YYYY" name="date">
    </div>
    
    <div class="form-group">
      <label for="importance">Importance</label>
      <div class="radio">
        <input type="radio" id="imp-1" value="1" name="importance">
        <label for="imp-1">Very Low Importance</label>
      </div>
      <div class="radio">
        <input type="radio" id="imp-2" value="2" name="importance">
        <label for="imp-2">Low Importance</label>
      </div>
      <div class="radio">
        <input type="radio" id="imp-3" value="3" name="importance">
        <label for="imp-3">Moderate Importance</label>
      </div>
      <div class="radio">
        <input type="radio" id="imp-4" value="4" name="importance">
        <label for="imp-4">High Importance</label>
      </div>
      <div class="radio">
        <input type="radio" id="imp-5" value="5" name="importance">
        <label for="imp-5">Very High Importance</label>
      </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
    <a href="/events" class="btn btn-outline-primary">Cancel</a>
  </form>
</div>
